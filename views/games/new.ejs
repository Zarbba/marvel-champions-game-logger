<%- include(`../partials/header`) %>
<h2>Create a new game log</h2>
<form action="/games" method="post">
    <label for="game-name">Game Name:</label>
    <input id="game-name" type="text" name="gameName" required>
    <label for="date-played">Date Played:</label>
    <input id="date-played" type="date" name="datePlayed" required>
    <label for="scenario">Scenario:</label>
    <input id="scenario" type="text" name="scenario" required>
    <section class="player-section">
    </section>
    <button type="button" class="add-player">Add a player</button>
    <label for="won-game">The players:</label>
        <select id="won-game" name="wonGame">
            <option value="true">Won</option>
            <option value="false">Lost</option>
            <option class="hidden" value="" selected></option>
        </select>
    <label for="notes">Notes:</label>
    <textarea id="notes" type="" name="notes" rows="6" cols="40"></textarea>
    <button>Log Game</button>
</form>
<%- include(`../partials/footer`) %>